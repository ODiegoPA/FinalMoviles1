<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/lblRestaurantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurante: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="4dp"
        tools:text="Nombre del Restaurante" />

    <TextView
        android:id="@+id/lblReservationDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblRestaurantName"
        android:layout_marginBottom="4dp"
        tools:text="2024-07-10" />

    <TextView
        android:id="@+id/lblReservationTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblReservationDate"
        android:layout_marginBottom="4dp"
        tools:text="12:00" />

    <TextView
        android:id="@+id/lblReservationPeople"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Personas: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblReservationTime"
        tools:text="2" />
</androidx.constraintlayout.widget.ConstraintLayout>
